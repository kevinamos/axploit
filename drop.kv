Button:
				size_hint:(1, None)
				height:30
				pos_hint:{'top':.8}
				text:'Choose a scan type'
				id:btn
				on_release:dropdown.open(self)
				size_hint_y:None
			Widget:
				on_parent:dropdown.dismiss()
			DropDown:
				id:dropdown
				on_select:btn.text='{}'.format(args[1])
				Button:
					text:"Syn Scan"
					size_hint_y:None
					height:30
					on_release:dropdown.select('-Ss')

				Button:
					text:"TCP connect scan"
					size_hint_y:None
					height:30
					on_release:dropdown.select('-sT')
				Button:
					text:"UDP scan -sU"
					size_hint_y:None
					height:30
					on_release:dropdown.select('-sU')
				Button:
					text:"Ack Scan"
					size_hint_y:None
					height:30
					on_release:dropdown.select('-sA')

				Button:
					text:"TCP Fin scan"
					size_hint_y:None
					height:30
					on_release:dropdown.select('-sF')
				Button:
					text:"Idle Scan"
					size_hint_y:None
					height:30
					on_release:dropdown.select('-sI')
